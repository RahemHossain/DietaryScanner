<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Status Bar -->
    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:41"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />

        <!-- Dynamic Island -->
        <View
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:background="@drawable/dynamic_island_bg"
            android:layout_centerHorizontal="true" />

        <!-- Status Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●●●●"
                android:textColor="#000000"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📶"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📱"
                android:textColor="#000000" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:hint="Search"
            android:textColorHint="#999999"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_microphone"
            app:tint="#999999" />
    </LinearLayout>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Preference Section -->
            <LinearLayout
                android:id="@+id/preferenceSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Preference: Halal, Kosher, Vegan...."
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Saved List Section -->
            <LinearLayout
                android:id="@+id/savedListSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/savedListTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Saved List"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:paddingBottom="8dp" />

                <!-- Saved Item 1 - Approved -->
                <LinearLayout
                    android:id="@+id/savedItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Green Check Circle -->
                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/green_check_circle"
                        android:layout_marginEnd="16dp" />

                    <!-- Product Image Placeholder -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#E0E0E0"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Takis Spicy level"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="#999999" />
                </LinearLayout>

                <!-- Saved Item 2 - Rejected -->
                <LinearLayout
                    android:id="@+id/savedItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Red X Circle -->
                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/red_x_circle"
                        android:layout_marginEnd="16dp" />

                    <!-- Product Image Placeholder -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#E0E0E0"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Takis Spicy level"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="#999999" />
                </LinearLayout>
            </LinearLayout>

            <!-- Popular Items Section -->
            <LinearLayout
                android:id="@+id/popularItemsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/popularItemsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Items"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:paddingBottom="8dp" />

                <!-- Popular Items Grid -->
                <GridLayout
                    android:id="@+id/popularItemsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:padding="16dp"
                    android:paddingTop="8dp">

                    <!-- Popular Item 1 -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="#E0E0E0" />

                    <!-- Popular Item 2 -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="#E0E0E0" />

                    <!-- Popular Item 3 -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="#E0E0E0" />

                    <!-- Popular Item 4 -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="#E0E0E0" />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>